    <build>
        <plugins>
            <plugin>
                <groupId>net.ltgt.gwt.maven</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>1.0.0</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>compile-to-javascript</id>
                        <configuration>
                            <moduleName>fr.insalyon.creatis.vip.portal.Main</moduleName>
                            <jvmArgs>-Xms512m</jvmArgs>
                            <jvmArgs>-Xmx1024m</jvmArgs>
                            <sourceLevel>auto</sourceLevel>
                        </configuration>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.2.3</version>
                <executions>
                    <execution>
                        <!-- This is the default plugin execution, building the main artefact, the production war.-->
                        <id>default-war</id>
                        <goals><goal>war</goal></goals>
                        <configuration>
                            <packagingExcludes>WEB-INF/lib/*-sources.jar</packagingExcludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- Just to avoid compiling GWT here-->
            <id>no-gwt</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>net.ltgt.gwt.maven</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <version>1.0.0</version>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>compile-to-javascript</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
