<description>
        <executable name="gate.sh">
                <access type="LFN" cached="true">
                </access>
                <retrycount value="10"/>
                <value value="[BIN_DIR]/gate.sh"/>
                <!--avoids SL3 CEs because shared libs don't work there-->
                <requirement value="(!RegExp(&quot;.*ce.grid.rug.nl.*&quot;,other.GlueCEUniqueID))"/>
                <input name="release_tgz" option="no1">
                        <access type="LFN" cached="true"/>
                </input>
                <input name="input_tgz" option="no2">
                        <access type="LFN" cached="true"/>
                </input>
                <input name="seedNumber" option="no3">
                </input>
                <input name="totalSeeds" option="no4">
                </input>
                <input name="gateAlias" option="no5">
                </input>

                <input name="stopOnScriptTime" option="no7">
                </input>
                <input name="wrapperType" option="no8">
                </input>
		<input name="outDir" option="no9">
                </input>

                <output name="outputdirectory" option="no6">
                        <template value="$dir8/$na8/output-$na3.tar.gz"/>
                        <access type="LFN" cached="true"/>
                </output>

                <sandbox name="diracClient">
                        <access type="LFN"/>
                        <value value="[BIN_DIR]/testenv.tar.gz"/>
                </sandbox>
		<sandbox name="dos2unix">
                        <access type="LFN"/>
                        <value value="[BIN_DIR]/dos2unix"/>
                </sandbox>
		<sandbox name="unzip">
                        <access type="LFN"/>
                        <value value="[BIN_DIR]/unzip"/>
                </sandbox>
        </executable> 
</description>
